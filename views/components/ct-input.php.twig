<label class="ct-input {{ inline is defined ? 'inline' : '' }}">
    {% if hideLabel != true %}
        {% block text %}
            <span>{{label}}<span class="requiredElement">{{ required is defined ? ' *' : '' }}</span></span>
        {% endblock %}
    {% endif %}
    {% block input %}
        <input
            placeholder="{{placeholder|default(label)}}"
            {% if id is defined %}
                id="{{id}}"
            {% endif %}
            {% if label is defined %}
                title="{{label}}"
            {% endif %}
            {% if name is defined %}
                name="{{name}}"
            {% endif %}
            {% if value is defined %}
                value="{{value}}"
            {% endif %}
            {% if languages is defined %}
                languages="{{languages}}"
            {% endif %}
            {% if exerciseLanguage is defined %}
                exerciseLanguage="{{exerciseLanguage}}"
            {% endif %}
            {% if multiple is defined %}
                multiple
            {% endif %}
            {% if onclick is defined %}
                onclick = "{{onclick}}"
            {% endif %}
            {% if maxlength is defined %}
                maxlength = "{{maxlength}}"
            {% endif %}
            type="{{type|default('text')}}"
        >
    {% endblock %}
</label>